	author = {Lemaire, X.},
	file = {Full Text PDF:C\:\\Users\\apn30\\Zotero\\storage\\MHV6W8MP\\Lemaire - Towards inclusive urban building energy models in.pdf:application/pdf;Snapshot:C\:\\Users\\apn30\\Zotero\\storage\\9VJNIXW7\\219542943.html:text/html},
}

