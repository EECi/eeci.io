	file = {ScienceDirect Full Text PDF:C\:\\Users\\apn30\\Zotero\\storage\\BYMDU8BP\\Tirumalachetty et al. - 2013 - Forecasting greenhouse gas emissions from urban re.pdf:application/pdf;ScienceDirect Snapshot:C\:\\Users\\apn30\\Zotero\\storage\\J8UF6W87\\S0966692313001385.html:text/html},
