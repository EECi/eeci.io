	author = {Malakar, Yuwan and Greig, Chris and van de Fliert, Elske},
	month = dec,
	year = {2018},
	keywords = {Energy policy, Energy poverty, India, Adoption of modern fuels, Solid cooking fuels},
	pages = {225--235},
