@article{habibi_asymmetric_2015,
	title = {Asymmetric flexural behavior from bamboo’s functionally graded hierarchical structure: {Underlying} mechanisms},
	volume = {16},
	issn = {1742-7061},
	shorttitle = {Asymmetric flexural behavior from bamboo’s functionally graded hierarchical structure},
