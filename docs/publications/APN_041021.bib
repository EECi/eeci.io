	number = {1},
	urldate = {2017-05-15},
	journal = {Journal of Product Innovation Management},
	author = {Ernst, Holger and Kahle, Hanna Nari and Dubiel, Anna and Prabhu, Jaideep and Subramaniam, Mohan},
	month = jan,
	year = {2015},
	pages = {65--79},
	file = {Full Text PDF:C\:\\Users\\apn30\\Zotero\\storage\\J83HZGLJ\\Ernst et al. - 2015 - The Antecedents and Consequences of Affordable Val.pdf:application/pdf;Snapshot:C\:\\Users\\apn30\\Zotero\\storage\\E3DZHELD\\abstract.html:text/html},
