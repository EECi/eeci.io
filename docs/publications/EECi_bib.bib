	author = {van Vliet, J. and Bregt, A. K. and Hagen-Zanker, A.},
	month = apr,
	year = {2011},
	keywords = {Accuracy assessment, Kappa statistic, Land-use change, Model calibration, map comparison},
	pages = {1367--1375}
}

